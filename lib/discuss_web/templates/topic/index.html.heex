<h2>Topics</h2>

<ul class="collection">
  <%= for topic <- @topics do %>
    <li class="collection-item"><%= topic.title %></li>
  <% end %>
</ul>

<div class="fixed-action-btn">
  <%= link to: Routes.topic_path(@conn, :new),
      class: "btn-floating btn-large red waves-effect waves-light" do %>
    <i class="large material-icons">add</i>
  <% end %>
</div>
